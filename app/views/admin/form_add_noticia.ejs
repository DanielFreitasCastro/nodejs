<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal de notícias</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="./">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
		
			<% if (validation.length) { %>
				<div class="row">
					<div class="col-md-12">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
								<% for (var x = 0; x < validation.length; x++){ %>
								<li><%= validation[x].msg %></li>
								<% } %>
							</ul>
						</div>
					</div>
				</div>
			<% } %>
			
	    	<div class="row">
				<div class="col-md-12">
				
		
				<form action="/noticias/salvar" method="POST">
				<div class="form-group">	
					<label for="titulo">Titulo</label>
						<input type="text" name="titulo" value="<%= noticia.titulo %>" id="titulo" placeholder="Titulo da noticia">
					</div>
					<div class="form-group">
						<label for="autor">Autor</label>
						<input type="text" name="autor" value="<%= noticia.autor %>" id="autor" placeholder="Autor da noticia">
					</div>
					<div class="form-group">
						<label for="data">Data dos fatos</label>
						<input type="date" name="data_noticia" value="<%= noticia.data_noticia %>" id="data" placeholder="dd/mm/aaaa">
					</div>
					<div class="form-group">
						<label for="noticia">Noticia</label>
						<textarea name="noticia" id="noticia" rows="4"><%= noticia.noticia %></textarea>
					</div>
					<div class="form-group">
						<label for="resumo">Resumo</label>
						<textarea name="resumo" id="resumo" rows="4"><%= noticia.resumo %></textarea>
					</div>
					<input type="submit" class="btn btn-default">Cadastrar</input>
				</form>

		    	</div>
	    	</div>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>